<button class="btn btn-link btn-xs" data-toggle="modal" data-target="#automation-<%= automation.id %>-data">
  Show procedures
</button>
<div class="modal fade" id="automation-<%= automation.id %>-data" tabindex="-1" role="dialog" aria-labelledby="#automation-<%= automation.id %>-data" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="automation-<%= automation.id %>-data">Procedures</h4>
      </div>
      <div class="modal-body">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>Position</th>
              <th>Script</th>
            </tr>
          </thead>
          <tbody>
            <% automation.procedures.by_position.each do |procedure| %>
              <tr>
                <td><%= procedure.position %></td>
                <td><%= procedure.script %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
