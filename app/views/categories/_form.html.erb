<%= simple_form_for @category, html: { class: 'form-inline' } do |f| %>
  <% if @category.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@category.errors.count, "error") %> prohibited this automation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= f.input :name, placeholder: 'Enter category name' %>
  <br>
  <br>
  <%= f.input :color, as: :minicolors %>
  <br>
  <br>
  <%= f.input :priority %>
  <br>
  <br>
  <%= f.button :submit, class: 'btn btn-primary' %>
  <%= link_to t('.cancel', default: t("helpers.links.cancel")),
            categories_path, class: 'btn btn-default' %>

<% end %>
